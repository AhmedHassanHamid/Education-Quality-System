

<h1>Courses</h1>

<table class="table table-striped table-hover" caption-top >
  <thead class="table-dark">
    <tr>
      <th>Course name</th>
      <th>Hours</th>
      <th>Semester</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
    <% if course.user == current_user %>
      <tr style="color:#fff">
        <td><%= course.Course_nameL %></td>
        <td><%= course.Hours %></td>
        <td><%= course.Semester %></td>
        <td><%= link_to 'Show', course,class:'btn btn-secondary' %></td>
        <td><%= link_to 'Edit', edit_course_path(course),class:'btn btn-secondary' %></td>
        <td><%= link_to 'Destroy', course,class:'btn btn-outline-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr style="color:#fff">
      <% end %>
    <% end %>



  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path,class:'btn btn-secondary' %>


