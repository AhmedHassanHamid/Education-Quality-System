
<h2 style= "color:#fff">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <p style= "color:#fff">Email</p>
    <%= f.email_field :email, autofocus: true,class:"form-control" , autocomplete: "email" %>
  </div>
<br/>
  <div class="actions">
    <!-- <%= f.submit "Send me reset password instructions" %> -->
    <input type="submit" name="commit" value="Send me reset password instructions" data-disable-with="Send me reset password instructions" class="btn btn-secondary">
  </div>

  <br/>

<% end %>

<%= render "devise/shared/links" %>
